
<form action="/payment/results">
  <div>
    <label for="apr_input"> APR </label>
    <input id="apr_input" type="text" name="apr" placeholder="E.g. 5.42">
  </div>

  <div>
    <label for="number_of_years_input"> Number of years </label>
    <input id="number_of_years_input" type="text" name="number_of_years" placeholder="How many years to repay?">
  </div>
  
  <div>
    <label for="principal_input"> Principal </label>
    <input id="principal_input" type="text" name="principal" placeholder="How much principal?">
  </div>

  <button> Calculate monthly payment </button>
</form>
